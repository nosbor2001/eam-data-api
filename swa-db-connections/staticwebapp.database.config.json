{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "networking": {
      "allowedIpRanges": ["AzureFrontDoor.Backend"]
    },
    "forwardingGateway": {
      "requiredHeaders": {
        "X-Azure-FDID" : "5dc70b3d-0f88-4572-9f6b-0cd0242d5f67"
      },
      "allowedForwardedHosts": [
        "eam-data-api-new-c0ayceh5ehcsa7cb.z02.azurefd.net"
      ]
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [ "http://localhost:4280" ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "students": {
      "source": "students",
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ]
    },
    "staff": {
      "source": "staff",
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ]
    }
  }
}
